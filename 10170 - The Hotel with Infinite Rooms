#include<iostream>
#include<cstdio>
using namespace std;
int main()
{
    long long gm,day,i,sum;//gp=groupmember
    while(cin>>gm>>day)
    {
        i=gm;
        sum=0;
       while(1)
        {
            sum +=i;

           if(sum>=day)
            {
                cout<<i<<endl;
                break;
            }
            i++;
        }
    }
    return 0;
}
